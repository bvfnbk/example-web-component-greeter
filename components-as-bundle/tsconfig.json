{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": true,
    "outDir": "dist/js",
    "rootDir": "src/ts"
  },
  "include": [
    "src/ts/**/*.ts",
    "src/test/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
